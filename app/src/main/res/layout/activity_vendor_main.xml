<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/vendor_background">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Map Fragment (background) -->
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Top App Bar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_bar_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Hamburger Menu Button -->
                <ImageButton
                    android:id="@+id/btnHamburger"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/icon_background"
                    android:src="@drawable/ic_menu"
                    android:contentDescription="Menu"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp"
                    android:tint="@color/white" />

                <!-- Vendor Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/vendorGreetingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome Back!"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/vendorNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vendor Name"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.8" />

                </LinearLayout>

                <!-- Status Indicator -->
                <LinearLayout
                    android:id="@+id/statusIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/status_background"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/statusDot"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_dot_offline"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/locationStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Dashboard Panel -->
        <androidx.cardview.widget.CardView
            android:id="@+id/dashboardCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="100dp"
            android:elevation="12dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Dashboard Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Vendor Dashboard"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_black" />

                        <ImageButton
                            android:id="@+id/btnRefresh"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_background"
                            android:src="@drawable/ic_refresh"
                            android:contentDescription="Refresh"
                            android:tint="@color/accent_teal"
                            android:layout_marginEnd="8dp" />

                        <ImageButton
                            android:id="@+id/btnCloseDashboard"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/icon_background"
                            android:src="@drawable/ic_close"
                            android:contentDescription="Close Dashboard"
                            android:clickable="true"
                            android:focusable="true"
                            android:elevation="4dp"
                            android:tint="@color/primary_black" />

                    </LinearLayout>


                    <!-- Location Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/locationCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ðŸ“ Business Location"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/primary_black" />

                                <TextView
                                    android:id="@+id/locationStatusBadge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Not Set"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:background="@drawable/status_badge_offline"
                                    android:padding="6dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/locationDetailsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set your business location to start receiving customers"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/coordinatesText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Coordinates: Not set"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPinLocation"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="ðŸ“ Pin My Location"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/accent_teal"
                            android:textColor="@color/white"
                            app:cornerRadius="28dp"
                            app:icon="@drawable/ic_location"
                            app:iconGravity="textStart"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManualLocation"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="âœï¸ Enter Location Manually"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            app:cornerRadius="28dp"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="textStart" />

                    </LinearLayout>

                    <!-- Business Hours Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ•’ Business Hours"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary_black"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:id="@+id/businessHoursText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="9:00 AM - 9:00 PM"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Toggle Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleOverlay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:text="Hide Dashboard"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_black"
            android:textColor="@color/white"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_visibility_off"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Floating Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:srcCompat="@drawable/ic_my_location"
                app:backgroundTint="@color/accent_teal"
                android:contentDescription="My Location"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_settings"
                app:backgroundTint="@color/primary_black"
                android:contentDescription="Settings"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"/>

</androidx.drawerlayout.widget.DrawerLayout>
