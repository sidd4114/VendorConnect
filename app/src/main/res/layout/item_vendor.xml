<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with image and basic info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Vendor Image -->
            <ImageView
                android:id="@+id/vendorImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="16dp"
                android:elevation="2dp"/>

            <!-- Vendor Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vendorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/vendorCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textSize="12sp"
                    android:textColor="@color/accent_teal"
                    android:textStyle="bold"
                    android:background="@drawable/category_chip_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/vendorLocality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locality"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="4dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Status and Rating -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/vendorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OPEN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/success_green"
                    android:background="@drawable/status_open_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/ratingStar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star_filled"
                        android:tint="@color/rating_yellow" />

                    <TextView
                        android:id="@+id/vendorRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_black"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/vendorDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Description"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="14dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp" />

        <!-- Specialties/Tags -->
        <LinearLayout
            android:id="@+id/specialtiesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/specialty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fresh"
                android:textSize="10sp"
                android:textColor="@color/accent_teal"
                android:background="@drawable/specialty_chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/specialty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organic"
                android:textSize="10sp"
                android:textColor="@color/accent_teal"
                android:background="@drawable/specialty_chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/specialty3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast"
                android:textSize="10sp"
                android:textColor="@color/accent_teal"
                android:background="@drawable/specialty_chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Bottom row with distance and price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_distance"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:id="@+id/vendorDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.5 km"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/vendorPriceRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$$"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accent_teal" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
